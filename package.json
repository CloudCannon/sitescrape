{
  "name": "sitescrape",
  "description": "A WIP tool to downloads any site into a local static site",
  "version": "0.0.0",
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib/**/*.js"
  ],
  "type": "module",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@prettier/plugin-xml": "^3.2.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.3",
    "jsdom": "^21.1.2",
    "srcset": "^5.0.0",
    "turndown": "^7.1.2",
    "yaml": "^2.2.1"
  },
  "scripts": {
    "publish": "npm run build && np",
    "test": "c8 ava",
    "build": "tsc",
    "start": "tsc && node --experimental-specifier-resolution=node lib/index.js",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "devDependencies": {
    "ava": "^5.0.0",
    "c8": "^7.13.0",
    "@types/jsdom": "^21.1.2",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CloudCannon/sitescrape.git"
  },
  "author": "CloudCannon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CloudCannon/sitescrape/issues"
  },
  "homepage": "https://github.com/CloudCannon/sitescrape#readme",
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "environmentVariables": {
      "TS_NODE_LOG_ERROR": "true"
    },
    "require": [
      "ts-node/register"
    ]
  }
}
